<% layout('/layouts/boilerplate') %>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for(let trending of listing){%> 
        <a href="/listings/<%= trending._id %>" class="listing-link">
            <div class="card col listing-card">
                <img src="<%= trending.image.url %>" class="card-img-top" alt="listing_image" style="height:20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text">
                            <b><%= trending.title %></b> <br>
                            &#8377; <%= trending.price.toLocaleString("en-IN") %> /night
                        </p>
                </div>
            </div>
        </a>
        
    <% } %>
</div>